                    <Setter Property="Foreground" Value="#fb7657"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MenuBtn" 
               TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6e7783"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="30 0 30 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="#fb7657"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- And boutton Controlle Style -->
        <!-- Start SVG Style -->
        <Style x:Key="SvgStyle" 
               TargetType="Viewbox">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
        </Style>
        <!-- And SVG Style -->

        <!-- Start Searche Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e2e44"/>
            <Setter Property="Foreground" Value="#F0E68C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="40 15 15 15"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBoxBase">
                        <Border x:Name="Border" CornerRadius="20"
                                BorderBrush="#FFFF00"
                                BorderThickness="3 0 3 0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"
                                >
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="Border"/>
                                <Setter Property="Background" Value="#fff"/>
                                <Setter Property="Foreground" Value="#1e2e44"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#d9d9d9" TargetName="Border"/>
                                <Setter Property="Background" Value="#1e2e44"/>
                                <Setter Property="Foreground" Value="#fff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- And Searche Style -->

        <!-- Start menu bar left Style -->
        <Style x:Key="menuBarLeft" TargetType="Border">
            <Setter Property="CornerRadius" Value="15 0 0 15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="0 0 5 0"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- And menu bar left Style -->

        <!-- Start menu bar right Style -->
        <Style x:Key="menuBarRight" TargetType="Border">
            <Setter Property="CornerRadius" Value="0 15 15 0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="0 0 5 0"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
 
        </Style>
        <!-- And menu bar right Style -->

        <!-- And menu bar right Style -->
        <Style x:Key="MenuBtnSideBar" 
               TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6e7783"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2 0 2 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="#fb7657"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- And boutton Controlle Style -->

    </Application.Resources>
</Application>
